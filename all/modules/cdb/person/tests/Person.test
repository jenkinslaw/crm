<?php
/**
 * @file
 * Basic functional and Unit testing for Person Entity.
 */

class PersonTestCase extends DrupalWebTestCase {

  private $person;

  function setUp() {
    $this->setup = TRUE;
  }

  function tearDown() {
  }

  /**
   *  Initialize.
   */
  public static function getInfo() {
    return array(
      'name' => 'Person Entity tests.',
      'description' => 'Unit tests for Person entity.',
      'group' => 'Jenkins',
    );
  }

  /**
   * Test that the person has all recommeded fields.
   */
  public function testCheckPersonEntityInfo() {
    $person = new Person();
    $this->assertTrue(is_object($person), "The person object should be created");

    $foa = $person->foa()->info();
    $first_name = $person->first()->info();

    $this->assertTrue(is_array($foa),"Person entity has the foa field");
    $this->assertEqual($foa['type'], "list<text>", "foa is {$foa['type']}");
    $this->assertFalse($foa['required'], "FOA is not required");

    $this->assertTrue(is_array($first_name),"Person entity has the first name field");
    $this->assertEqual($first_name['type'], "text", "foa is {$first_name['type']}");
    $this->assertTrue($first_name['required'], "First name is required");

     }
}
